@page "/"
@using MudBlazor
@using System.ComponentModel.DataAnnotations

<PageTitle>ReenbitApp</PageTitle>

<MudTextField T="string" @bind-Value="Email" Required="true" RequiredError="Email is required!" Placeholder="Email"
    Validation="@(new EmailAddressAttribute() {ErrorMessage = "The email address is invalid!"})" />

<MudFileUpload T="IBrowserFile" FilesChanged="UploadFiles">
    <ButtonTemplate>
        <MudButton HtmlTag="label" Variant="Variant.Filled" Disabled = "_disableButton"
            StartIcon="@Icons.Material.Filled.CloudUpload" for="@context.Id">Upload Files</MudButton>
    </ButtonTemplate>
</MudFileUpload>